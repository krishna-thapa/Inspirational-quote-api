# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(file)

# Inspiration CRUD project endpoints
GET      /randomQuote               controllers.InspirationController.getRandomQuote
GET      /10quotes                  controllers.InspirationController.getFirst10Quotes

# CRUD operation endpoints for the custom table "custom_quotations"
GET         /customQuotes           controllers.InspirationController.getCustomQuotes
GET         /randomCustomQuote      controllers.InspirationController.getRandomCustomQuote
GET         /selectedQuote/:id      controllers.InspirationController.getSelectedQuote(id: Int)
POST        /customQuote            controllers.InspirationController.addCustomQuote
DELETE      /customQuote/:id        controllers.InspirationController.deleteCustomQuote(id: Int)


#POST    /inspiration               controllers.InspirationController.add
#PUT     /inspiration               controllers.InspirationController.update
#DELETE  /inspiration               controllers.InspirationController.delete(index: Int)